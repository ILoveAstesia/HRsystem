@page
@model HRsystem.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login Page";
}
<section class=" p-5 bg-light ">

<div class="text-center">
    <h1 class="display-2 text-primary">Login</h1>
</div>

<div class="w-50 container border-0">
    <form method="post">

        <div class="form-outline mb-4 ">
            <label class="form-label text-secondary display-6 " asp-for="Id">ID</label>
            <input class="form-control" asp-for="Id" value="" placeholder="用户名" />
            <span asp-validation-for="Id"></span>
        </div>
        <div class="form-outline mb-4 ">
            <label class="form-label text-secondary display-6" asp-for="Password">Password</label>
            <input class="form-control" asp-for="Password" type="password" placeholder="密码" />
            <span asp-validation-for="Password"></span>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert-danger  w-50  container text-center">@Model.ErrorMessage</div>
        }
        <br />

        <input type="checkbox" value="true" class="" asp-for="rememberMe" /> 记住我
        <br />
        <div class="text-center ">

        <button type="submit" class=" btn  btn-primary btn-lg w-50 ">Login Now!</button>

        </div>
    </form>
    <div class="text-secondary display-6 m-5">

            Do not Have any Account?     <a class=" btn btn-lg btn-warning text-light m-1" asp-area="" asp-page="/Account/Register">Register</a> Now!
    </div>

</div>

</section>