@page
@model HRsystem.Pages.Salarys.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-primary">SalaryInfo</h1>
<h4 class="text-warning">@Model.Infomation</h4>
<section>
<div class="container bg-light p-3">
<p>
    <a asp-page="Create" class="btn btn-lg btn-primary">Create New</a>
</p>
    
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SalaryInfo[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalaryInfo[0].Basic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalaryInfo[0].Bonus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SalaryInfo) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Basic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bonus)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

</div>
</section>